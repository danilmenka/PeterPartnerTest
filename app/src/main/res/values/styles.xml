<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="currencyButton">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">100dp</item>
    </style>

    <style name="textViewCurrencySymbol">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/symbol_height_currency</item>
        <item name="android:layout_marginTop">@dimen/symbol_margin_top</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/figma_text_grey</item>
        <item name="android:textSize">@dimen/symbol_currency_text_size</item>
    </style>

    <style name="textViewCurrencyText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/text_currency_margin_top</item>
        <item name="android:layout_marginBottom">@dimen/text_currency_margin_bottom</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/figma_text_grey</item>
        <item name="android:textSize">@dimen/text_currency_size</item>
    </style>


</resources>